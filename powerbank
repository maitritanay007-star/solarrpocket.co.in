<script>
    function showPage(pageId) {
        // 1. Hide all pages
        const pages = document.querySelectorAll('.page');
        pages.forEach(p => {
            p.classList.remove('active');
            p.style.display = 'none'; 
        });

        // 2. Show selected page
        const activePage = document.getElementById(pageId);
        if (activePage) {
            activePage.classList.add('active');
            activePage.style.display = 'block'; 
        }

        // 3. Update nav link styling
        const links = document.querySelectorAll('.nav-links li');
        links.forEach(l => l.classList.remove('active'));
        
        // Handle both ID naming conventions from the merged code
        const activeLink = document.getElementById('nav-' + pageId) || document.getElementById('n-' + pageId);
        if(activeLink) activeLink.classList.add('active');

        // 4. Smooth scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
</script>

